<!DOCTYPE html>
<html>
	<head>
	</head>
	<body>
		<p style="color: red"><%= flash[:error] %></p>

		<div id="log-in-box">
			<%= form_tag "/sessions" do  %>
			<%= text_field_tag :username,nil, placeholder: "Username" %>
			<%= password_field_tag :password, nil, placeholder: "Password" %>
			<%= submit_tag "Log In" %>
			 <% end %>
		</div>

		<p style="color: red"><%= flash[:error_two] %></p>

		<div id="sign-up-box">
			<%= form_tag("/sessions/new", method: "get") do  %>
			<%= text_field_tag :username, nil, placeholder: "Username" %>
			<%= password_field_tag :password, nil, placeholder: "Password" %>
			<%= password_field_tag :password_confirmation, nil, placeholder: "Confirm Password" %>
			<%= submit_tag "Sign Up" %>
			 <% end %>
		</div>

		<div id="log-out-box">
			<%= form_tag(session_path(1), method: "delete") do %>
			<%= submit_tag "Log Out" %>
			<% end %>
		</div>
	</body>
</html>